{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./types", "./node_modules/@types"] // Add this line
  },
  "include": ["src/**/*", "types/**/*.d.ts", "types"],
  "exclude": ["node_modules", "dist"]
}
